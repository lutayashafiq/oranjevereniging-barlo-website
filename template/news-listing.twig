{% extends "page.twig" %}

{% block title_text %}Nieuws{% endblock %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Nieuws</h2>
                    <hr>
                </div>

                {% for record in records %}
                <div class="col-lg-12 text-center">
                    {% if record.image!="" %}
                        <img class="img-responsive img-border img-full" src="{{ thumbnail(record.image, 800, 300) }}" alt="">
                    {% endif %}
                    <h2><a href="{{ record.link }}">{{ record.title }}</a>
                        <br>
                        <small>{{ record.date|date("d-m-Y")}}</small>
                    </h2>
                    <div class="text-left">{{ record.intro }}</div>
                    <a href="{{ record.link }}" class="btn btn-default btn-lg">Lees verder</a>
                    <hr>
                </div>
                {% endfor %}
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}