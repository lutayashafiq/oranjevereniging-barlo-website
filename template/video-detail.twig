{% extends "page.twig" %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">{{ record.title }}</h2>
                    <hr>
                </div>

                <div class="video-player">
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ record.getYoutubeId }}" frameborder="0" allowfullscreen></iframe>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

{% endblock %}