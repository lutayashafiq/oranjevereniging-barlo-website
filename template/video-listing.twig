{% extends "page.twig" %}

{% block title_text %}Video's{% endblock %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Video's</h2>
                    <hr>
                </div>
                
                <div class="videos">
                    {% for record in records %}
                        <a class="col-sm-3 text-center video" href="{{ record.link }}">
                            <img class="img-responsive" src="{{ record.getThumbUrl }}" alt="{{ record.title }}">
                            <h3>{{ record.title }}</h3>
                        </a>
                    {% endfor %}
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}