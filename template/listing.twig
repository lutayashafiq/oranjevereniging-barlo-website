{% extends "page.twig" %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                {#<div class="col-lg-12">#}
                    {#<hr>#}
                    {#<h2 class="intro-text text-center">Nieuws</strong>#}
                    {#</h2>#}
                    {#<hr>#}
                {#</div>#}

                {% for record in records %}
                <div class="col-lg-12 text-center">
                    {% if record.image!="" %}
                        <img class="img-responsive img-border img-full" src="{{ thumbnail(record.image, 800, 300) }}" alt="">
                    {% endif %}
                    <h2>{{ record.title }}
                    </h2>
                    <a href="{{ record.link }}" class="btn btn-default btn-lg">Lees verder</a>
                    <hr>
                </div>
                {% endfor %}
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}