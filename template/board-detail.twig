{% extends "page.twig" %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    {#{% if record.image!="" %}#}
                        {#<img class="img-responsive img-border img-full" src="{{ thumbnail(record.image, 800, 300) }}" alt="">#}
                    {#{% endif %}#}
                    <h2>{{ record.name }} <small>{{ record.function}}</small></h2>
                </div>

                <div class="col-lg-9 text-left">
                    {{ record.body }}
                </div>
                <div class="col-sm-3 text-center">
                    {% if record.image!="" %}
                        <img class="img-responsive" src="{{ thumbnail(record.image, 250, 200) }}" alt="{{ record.name }}">
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}