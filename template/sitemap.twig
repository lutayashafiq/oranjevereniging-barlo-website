{% extends "layout.twig" %}

{% block title_text %}{{ __('Sitemap') }}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">{{ __('Sitemap') }}</h2>
                <hr>
            </div>
            <div class="col-lg-12">
                <ul>
                    {% for entry in entries %}
                        {% if entry.link is defined %}
                            <li><a href="{{ entry.link }}">{{ entry.title }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}