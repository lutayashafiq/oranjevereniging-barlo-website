{% extends "page.twig" %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    {% if record.image!="" %}
                        <img class="img-responsive img-border img-full" src="{{ thumbnail(record.image, 800, 300) }}" alt="">
                    {% endif %}
                    <h1>{{ record.title }}
                        <br>
                        <small>{{ record.datepublish|date("d-m-Y")}}</small>
                    </h1>
                    <div class="text-left">{{ record.body }}</div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}