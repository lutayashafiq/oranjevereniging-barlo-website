{% extends "page.twig" %}

{% block page_content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Bestuursleden</h2>
                    <hr>
                </div>

                <div class="board-members">
                    {% for record in records %}
                        <a class="col-sm-3 text-center board-member" href="{{ record.link }}">
                            {% if record.image!="" %}
                                <img class="img-responsive" src="{{ thumbnail(record.image, 250, 200) }}" alt="{{ record.name }}">
                            {% else %}
                                <img class="img-responsive" src="http://placehold.it/750x450" alt="">
                            {% endif %}
                            <h3>{{ record.name }}</h3>
                            <h4>{{ record.function }}</h4>
                        </a>
                    {% endfor %}
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
{% endblock %}